body
	background #EFEFF4
*
	margin 0
	padding 0
.login
	height 50px
	background white
	text-align center
	font-size 24px
	line-height 50px
	.login_back
		width 25px
		height 25px
		background url('../../img/nav_back_icon@2x.png') no-repeat
		position absolute
		left 20px
		top 15px
		background-size 40%	
.personal_name
	margin-top 1px
	background white
	text-align center
	padding 20px 0
	h2
		color #666	
		line-height 30px
	h4
		color #999	
		line-height 30px	
	.personal_logo
		width 80px
		height 80px	
		background url('../../img/info/log in_user-head@2x.png') no-repeat
		background-size 100%	
		margin 0 auto
	.personal_editor
		border 1px solid #EC631A
		width 100px	
		margin 10px auto
		color #EC631A
		padding 10px
		font-size 14px
		border-radius 5px
.personal_info
	padding 10px
	background white
	margin-top 12px	
	color #666	
	.personal_info_li
		display flex
		line-height 40px	
		border-bottom 1px solid #E5E5E5	
		.personal_info_txt
			flex 3		
		.personal_info_txt2
			flex 4
			margin-left 20px
	.material
		display flex
		margin-top 20px	
		li
			flex 3
			list-style none
			color #666
			.material_pic
				display block				
				width 100px
				height 70px
				border-radius 5px
				background #878787
				margin 5px 10px		
			.material_txt
				display block		
				font-size 12px	
				text-align center
		
		
		
		
		
		
		
		
		
		