body
	background #EFEFF4
*
	margin 0
	padding 0	
.login
	height 40px
	background white
	text-align center
	color #EA5404
	font-weight bold
	font-size 20px
	line-height 40px
	margin-bottom 30px
	.login_back
		width 25px
		height 25px
		background url('../img/nav_back_icon@2x.png') no-repeat
		position absolute
		left 20px
		top 10px
		background-size 40%


.login_input
	display flex
	background white
	line-height 40px
	margin-bottom 1px
	position relative
			
	.login_name
		flex 1
		display block
		width 40px
		height 40px
		background url('../img/content_ID_icon@2x.png') no-repeat center
		background-size 40%
	.login_check
		flex 1
		display block
		width 40px
		height 40px
		background url('../img/content_verify_icon@2x.png') no-repeat center
		background-size 25%
	.login_pass	
		flex 1
		display block
		width 40px
		height 40px
		background url('../img/content_password_icon@2x.png') no-repeat center
		background-size 30%
	.name
		flex 5	
		display block
		border none
		outline none
		
		
	.password
		flex 5	
		border none
		outline none
	.check
		background #EA5404
		font-size 12px	
		line-height 18px
		padding 4px
		border-radius 5px
		color #fff
		position absolute
		right 15px
		top 7px
.login_log
	width 95%	
	height 50px
	margin 50px auto
	font-size 20px
	background #C7C7C7
	color white
	text-align center
	line-height 50px
	border-radius 5px
	

	
	
	